pipeline {
    agent {
        dockerfile {
            filename 'Dockerfile'       
            dir '.'                     
            additionalBuildArgs '--privileged'
            label 'zip-job-docker'      
        }
    }

    stages {
        stage('Build & Run Python Job') {
            steps {
                echo 'Building image and running zip_job.py...'
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
