pipeline {
    agent {
        dockerfile {
            filename 'Dockerfile'       
            dir '.'                     
            label 'zip-job-docker'      
        }
    }

    environment {
        ARTIFACTORY_CREDS = credentials('artifactory-creds')
        RECIPIENT_EMAIL = "ronyzn3@gmail.com"
    }

    stages {
        stage('Run Job') {
            steps {
                script {
                    utils = load 'jenkins_utils.groovy'
                    utils.runZipJob()
                }
            }
        }

        stage('Publish to Artifactory') {
            steps {
                script {
                    utils.uploadToArtifactory('zip-artifacts')
                }
            }
        }
        stage('Report'){
            steps{
                script {
                    utils.sendEmailReport(env.RECIPIENT_EMAIL)
                }
            }
        }
    }

    post {
        always {
            script {
                utils.cleanWorkspace()
            }
        }
    }
}
