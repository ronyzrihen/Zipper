pipeline {
    agent {
        dockerfile {
            filename 'Dockerfile'
            dir '.'
            label 'zip-job-docker'
        }
    }

    environment {
        RECIPIENT_EMAIL = 'ronyzn3@gmail.com'
    }
    stages {
        stage('Load Utils') {
            steps {
                script {
                   utils = load 'jenkins_utils.groovy'
                }
            }
        }

        stage('Run Job') {
            steps {
                script {
                    utils.runZipJob()
                }
            }
        }

        stage('Publish to Artifactory') {
            steps {
                script {
                    echo 'Initializing Artifactory server...'
                    utils.uploadToArtifactory()
                    echo 'Upload to Artifactory stage completed.'
                }
            }
        }
    }

    post {
        always {
            script {
                utils.sendEmailReport()
                utils.cleanWorkspace()
            }
        }
    }
}
