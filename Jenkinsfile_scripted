node('zip-job-docker') {
    stage('Build Docker and Run') {
        docker.image('python:3.10').inside('-v /var/run/docker.sock:/var/run/docker.sock') {
            checkout scm
            utils = load 'jenkins_utils.groovy'

            stage('Run Job') {
                utils.runZipJob()
            }

            stage('Publish to Artifactory') {
                utils.uploadToArtifactory()
            }

            stage('Post Actions') {
                try {
                    utils.sendEmailReport()
                } catch (err) {
                    echo "Failed to send email: ${err.message}"
                }
                utils.cleanWorkspace()
            }
        }
    }
}
